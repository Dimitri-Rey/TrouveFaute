{
  "name": "Assistant Voltaire GPT",
  "version": "1.0",
  "description": "Extension Chrome intégrant l'API GPT pour améliorer votre français",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus",
    "storage"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_popup": "src/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "css": ["src/content.css"]
    }
  ]
} 